/* pages/index/index.wxss */

.indexContainer {
  padding: 24rpx;
}

.banners {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.banners image {
  width: 100%;
  height: 100%;
}

.navContainer {
  display: flex;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.recommendContainer {
  padding: 20rpx;
}

/* 推荐区内容 */

.recommendScroll {
  display: flex;
  height: 300rpx;
}

.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scrollItem text {
  font-size: 26rpx;
  /* 单行文本溢出隐藏 省略号代替*/
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */

  /* 多行文本溢出隐藏 省略号代替 */

  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;

}


/* 排行榜 */

.topList {
  padding: 20rpx;
}

.topListSwiper {
  height: 450rpx;
}

.swiperItem {
  width: 96%;
  background-color: #fdfdfd;
}

.swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;
}

.musicItem {
  display: flex;
  margin-bottom: 20rpx;
  /* align-items: center; */
}

.musicItem .musicThumb {
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
  overflow: hidden;
}

.musicItem .musicThumb image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.musicItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}